<Window x:Class="DemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Height="23" Margin="66,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Foreground="#FFE72C2C" BorderBrush="#FF003DF4" BorderThickness="2"/>
        <Button Content="Click Me" HorizontalAlignment="Left" Margin="345,41,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Background="#FF141414" Foreground="White"/>
        <Label x:Name="Labble" Content="" HorizontalAlignment="Left" Margin="66,152,0,0" VerticalAlignment="Top" Foreground="#FFDD1919"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="327,152,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>
        <RadioButton x:Name="radioButtonMale" Content="Male" HorizontalAlignment="Left" Margin="210,239,0,0" VerticalAlignment="Top" GroupName="Gender" Checked="radioButtonMale_Checked"/>
        <RadioButton Content="Female" HorizontalAlignment="Left" Margin="280,239,0,0" VerticalAlignment="Top" GroupName="Gender"/>

    </Grid>
</Window>
